<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/bg_yusuanzonglanitem"
        android:orientation="horizontal"
        android:padding="3dp" >

        <com.pm.common.AlwaysMarqueeTextView
            android:id="@+id/yusuanzonglan_gundong_tv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="#00ffff"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollbars="horizontal"
            android:singleLine="true"
            android:text="角钢"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:orientation="vertical" 
            android:paddingBottom="2dp">
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:orientation="horizontal">
                 <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类"
                    android:textColor="#ffffff"
                    android:background="#00ffff"/>
                 <View android:layout_width="3dp"
                     android:layout_height="match_parent"/> 
                <TextView 
                    android:id="@+id/zonglanlei_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="主材•飞雕•超润•15cm•600×600"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:orientation="horizontal">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需"
                    android:textColor="#ffffff"
                    android:background="#cc3399"/>
                <View android:layout_width="3dp"
                     android:layout_height="match_parent"/>
                <TextView 
                    android:id="@+id/zonglanxu_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1000CM * 10￥"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:orientation="horizontal">
                 <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="供"
                    android:textColor="#ffffff"
                    android:background="#33ff00"/>
                 <View android:layout_width="3dp"
                     android:layout_height="match_parent"/>
                <TextView 
                    android:id="@+id/zonglangong_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="西安电子科技有限公司"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>